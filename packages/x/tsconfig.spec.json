{
  "extends": [
    "./tsconfig.json",
    "@social-sdk/configs/typescript/vitest.tsconfig.json"
  ],
  "compilerOptions": {
    "types": [
      "node",
      "vitest/globals",
      "vitest/jsdom",
      "@types/golang-wasm-exec"
    ],
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "./*"
      ],
      "golang-wasm-exec": [
        "../vendors/tinygo@v0.37.0/targets/wasm_exec.cjs"
      ]
    }
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "vendors/tinygo@v0.37.0/targets/wasm_exec.cjs"
  ],
  "exclude": [
    "**/*.config.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    }
  ]
}
