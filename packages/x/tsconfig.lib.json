{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": [
      "node",
      "@types/golang-wasm-exec"
    ],
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "./*"
      ],
      "golang-wasm-exec": [
        "../vendors/tinygo@v0.37.0/targets/wasm_exec.cjs"
      ]
    }
  },
  "include": [
    "src",
    "vendors/tinygo@v0.37.0/targets/wasm_exec.cjs"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.config.ts",
    "**/__fixtures__/**"
  ]
}
